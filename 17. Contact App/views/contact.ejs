<div class="container mt-3">
  <div class="row">
    <div class="col-md-8">
      <h1>Daftar Contact</h1>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Nama</th>
            <th scope="col">Nomor Hp</th>
            <th scope="col">Aksi</th>
          </tr>
        </thead>
        <tbody>
          <% if (contacts.length===0) { %>
            <tr>
              <td colspan="4">
                <div class="alert alert-danger fw-bold" role="alert">
                  Data kontak tidak ada. 
                </div>
              </td>
            </tr>
          <% } else { %>
            <% contacts.forEach((contact,index) => {index++ %>
              <tr >
                <th scope="row"><%= index %></th>
                <td><%= contact.nama %></td>
                <td><%= contact.noHp  %></td>
                <td>
                  <a href="/contact/<%= contact.nama %>" class="btn btn-success badge rounded-pill">detail</a>
                </td>
              </tr>
            <% }) %>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>
